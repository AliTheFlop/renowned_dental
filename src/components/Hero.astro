<section class="hero-section">
    <div class="hero-content">
        <div class="hero-headings">
            <h1 class="hero-heading">The Better Dental<br />Experience</h1>
            <p class="hero-subheading">
                You deserve better than average dental care. We strive to
                provide exceptional service and a comfortable experience,
                tailored just for you.
            </p>
        </div>
        <div class="hero-button">
            <button>Request Appointment</button>
        </div>
    </div>
</section>

<style is:global>
    .hero-section {
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        background: url("/hero_bg.png");
        background-size: cover;
        background-position: center;
    }

    .hero-content {
        max-width: 80%;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        animation: fadeInUp 0.6s cubic-bezier(0.12, 0, 0.39, 0) 0s 1 normal
            forwards;
    }

    .hero-heading {
        font-family: "Lilita One", sans-serif;
        font-weight: 400;
        font-style: normal;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 1.25rem;
        color: var(--accent-blue);
    }

    .hero-subheading {
        font-size: 0.9rem;
        margin-bottom: 3rem;
        text-align: center;
    }

    .hero-button button {
        background: linear-gradient(#21aae5, var(--primary-blue));
        border: none;
        padding: 0.8rem 1.6rem;
        margin-top: 1rem;
        color: white;
        cursor: pointer;
        font-weight: 700;
        font-size: 0.8rem;
    }

    @media screen and (min-width: 768px) {
        .hero-heading {
            font-size: 2.75rem;
        }

        .hero-subheading {
            font-size: 1rem;
        }

        .hero-button button {
            padding: 0.9rem 1.8rem;
            font-size: 0.9rem;
        }
    }

    @media screen and (min-width: 1024px) {
        .hero-content {
            align-items: start;
        }

        .hero-headings {
            max-width: 50%;
        }

        .hero-heading {
            font-size: 3.5rem;
            text-align: start;
        }

        .hero-subheading {
            text-align: start;
        }
    }

    @media screen and (min-width: 1200px) {
        .hero-content {
            align-items: start;
        }

        .hero-headings {
            max-width: 50%;
        }

        .hero-heading {
            font-size: 4rem;
            text-align: start;
        }

        .hero-subheading {
            font-size: 1.25rem;
            text-align: start;
        }

        .hero-button button {
            font-size: 1rem;
            padding: 1rem 2rem;
        }
    }
</style>
